<html>
  <body>
    <main class="mb-auto">
      
      <%= render 'books/error', book: @book %> 
      
      <h1>Editing Book</h1>
        <div class="container">
          <div class="row">
            <div class="xm-auto col-12 col-sm-12 col-md-10 col-lg-8">
              <%= form_with model: @book do |f| %>
              <div class="mt-3">
                <label for="inputTytle">Title</label><br>
                <%= f.text_field :title, autofocus: true, id:"inputTytle", placeholder:"本の名前" %>
              </div>
              <div class="mt-3">
                <label for="Opinion" >Opinion</label><br>
                <%= f.text_field :body, autofocus: true, id:"inputBody", placeholder:"本の紹介" %>
              </div>
                <%= f.submit "Update Book" , class:"btn btn-success mt-4" %>
                <% end %>
              <div class="mt-3">
                <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
              </div>
            </div>
          </div>
        </div>
        
 
 
    </main>
  </body>
</html>   

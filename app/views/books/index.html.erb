<html>
  <body>
    <main class="mb-auto">
      
      <%= render 'books/error', book: @book %> 
      
      <p id="notice"><%= flash[:notice] %></p>
      
      <div class="container">
        <div class="row no-gutters">
          <div class="mx-auto col-lg-4 col-md-4 col-sm-11 col-11">
            <div class="container">
              <div class="row no-gutters">
                <div class="mx-auto col-md-10 col-10">
                  <h2 class="pt-3 pb-2">User info</h2>
                  <% @users.each do |user| %>
                  <div><%= image_tag user.get_profile_image(100,100) %></div> 
                  <table class="table">
                    <tbody>
                      <tr class="">
                        <th class="font-weight-bold mr-3">name</th>
                        <th class="font-weight-bold"><%= user.name %></th>
                      </tr>
                      <tr class="">
                        <th class="font-weight-bold mr-3">introduction</th>
                        <th class="font-weight-bold"><%= user.introduction %></th>
                      </tr>
                    </tbody>
                  </table>
                <% end %>

                  <%= link_to edit_user_path(@userId) , class: 'btn btn-default btn-outline-secondary col-12 col-sm-12 col-md-12 col-lg-12 mt-4 mb-2' do %>
                  <i class="fa-solid fa-user-gear"></i>
                  <% end %>
                </div>
              </div>
            </div>
      
      <div class="container">
        <div class="row">
          <div class="mx-auto col-md-11">
            <h2 class="pt-3 pb-2">New book</h2>
            <%= form_with model: @book do |f| %>
              <div class="field">
                  <label for="book_title" class="d-block">Title</label>
                  <div class="d-block"><%= f.text_field :title %></div>
              </div>
      
              <div class="field">
                  <label for="book_body" class="d-block">Opinion</label>
                  <div class="d-block"><%= f.text_area :body %></div>
              </div>
  
              <div class="action">
                <%= f.submit 'Create Book', class:"btn btn-block btn-success mt-4" %>
              </div>
            <% end %>
          </div>
        </div>
        </div>
      </div>
      
      <div class="mx-auto col order-2 col-lg-7 col-md-7 col-sm-11 col-11">
        <h2 class="pt-3 pb-2">Books</h2>
        <table class="table table-success table-striped">
        <thead>
          <tr>
            <th colspan="1" scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
          </tr>
        </thead>
            
            <% @books.each do |book| %>
        <tbody>
            <tr>
              <td>
                <%= image_tag book.user.get_profile_image(100,100) %><br>
                <%= link_to user_path(book.user.id) do %>
                <%= book.user.name %>
                <% end %>
              </td>
              <td><%= link_to book_path(book.id) do %>
                  <%= book.title %>
                  <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
        </table>
        </div>
      </div>
    </div>
    </main>
  </body>
</html>    
    

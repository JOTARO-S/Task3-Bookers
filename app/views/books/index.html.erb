<html>
  <body>
    <main class="mb-auto">
      
      <div id="<%= "error_explanation" if @book.errors.any? %>">
        <% if @book.errors.any? %>
        <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      
      
      <p id="notice"><%= flash[:notice] %></p>
      
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
            <h2>User info</h2>
            <% @users.each do |user| %>
            <p>image_tag</p>
            <hr>
            <p>name</p>
            <%= user.name %>
            <hr>
            <p>introduction</p>
            <%= user.introduction %>
            <p><%= link_to "edit", edit_user_path(@userId) %></p>
            <% end %>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-md-5">
            <h2>New book</h2>
            <%= form_with model: @book do |f| %>
              <div class="field">
                  <label for="book_title">Title</label>
                  <%= f.text_field :title %>
              </div>
      
              <div class="field">
                  <label for="book_body">Opinion</label>
                  <%= f.text_area :body %>
              </div>
  
              <div class="action">
                <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-success mt-4" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <div>
        <h2>Books</h2>
          <hr>
        <table>
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
            <hr>
        </thead>
            <% @books.each do |book| %>
        <tbody>
            <tr>
              <td>image_tag</td>
              <td><%= link_to book_path(book.id) do %>
                  <%= book.title %>
                  <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
          
      </div>
    </main>
  </body>
</html>    
    

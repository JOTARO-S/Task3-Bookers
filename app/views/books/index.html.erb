<html>
  <body>
    <main class="mb-auto">
      
      <%= render 'books/error', book: @book %> 
      <%= render 'books/info', {book: @book, user: @user} %> 

      <div class="mx-auto col order-2 col-lg-7 col-md-7 col-sm-11 col-11">
        <h2 class="pt-3 pb-2">Books</h2>
        <table class="table table-success table-striped">
        <thead>
          <tr>
            <th colspan="1" scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
          </tr>
        </thead>
            
            <% @books.each do |book| %>
        <tbody>
            <tr>
              <td>
                <%= image_tag book.user.get_profile_image(100,100) %><br>
                <%= link_to user_path(book.user.id) do %>
                <%= book.user.name %>
                <% end %>
              </td>
              <td><%= link_to book_path(book.id) do %>
                  <%= book.title %>
                  <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
        </table>
        </div>
      </div>
    </div>
    </main>
  </body>
</html>    
    

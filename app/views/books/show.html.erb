<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>
<html>
  <body>
    <main class="mb-auto">
      
      <p id="notice"><%= flash[:notice] %></p>
      
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
            <h2>User info</h2>
            <p>img</p>
            <hr>
            <p>name</p>
            <hr>
            <p>introduction</p>
            <p>edit</p>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-md-5">
            <h2>New book</h2>
            <%= form_with model:@book do |f| %>
              <div class="field">
                  <label for="book_title">Title</label>
                  <%= f.text_field :title %>
              </div>
      
              <div class="field">
                  <label for="book_body">Opinion</label>
                  <%= f.text_area :body %>
              </div>
  
              <div class="action">
                <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-success mt-4" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <div>
        <h2>Books</h2>
          <% @books.each do |book| %>
        <table>
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
  
        <tbody>
            <tr>
              <td>image</td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
          
      </div>
    </main>
  </body>
</html>   
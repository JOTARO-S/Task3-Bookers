<html>
  <body>
    <main class="mb-auto">
      
      <%= render 'books/info', {book: @book, user: @user} %> 
      
      <div class="mx-auto col order-2 col-lg-7 col-md-7 col-sm-11 col-11">
        <h2 class="pt-3 pb-2">Book detail</h2>
        <table class="table table-success table-striped">
            
        <tbody>
            <tr>
              <td>
                <%= image_tag @user.get_profile_image(100,100) %><br>
                <%= link_to user_path(@user) do %>
                <%= @books.user.name %>
                <% end %>
              </td>
              <td><%= link_to book_path(@books.id) do %>
                  <%= @books.title %>
                  <% end %>
              </td>
              <td><%= @books.body %>
              </td>
              <% if @books.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@books.id) , class: 'btn btn-success' %>
              </td>
              <% end %>
              <% if @books.user == current_user %>
              <td>
                <%= link_to "Destroy", book_path(@books), method: :delete , class: 'btn btn-danger' %>
              </td>
              <% end %>
            </tr>
        </tbody>
        </table>
        </div>
      </div>
    </div>
    </main>
  </body>
</html>   
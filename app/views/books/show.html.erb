<html>
  <body>
    <main class="mb-auto">
      
      <div class="container">
      <div class="row no-gutters">
      <%= render 'books/info', {book: @book, user: @user} %> 
      
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
            
        <tbody>
            <tr>
              <td><%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image(100,100) %><br>
                <%= @books.user.name %>
                <% end %>
              </td>
              <td><%= link_to book_path(@books.id) do %>
                  <%= @books.title %>
                  <% end %>
              </td>
              <td><%= @books.body %>
              </td>
              <% if @books.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@books.id) , class: 'btn btn-success' %>
              </td>
              <% end %>
              <% if @books.user == current_user %>
              <td>
                <%= link_to "Destroy", book_path(@books), method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger' %>
              </td>
              <% end %>
            </tr>
        </tbody>
        </table>
        </div>
      </div>
    </div>
    </main>
  </body>
</html>   
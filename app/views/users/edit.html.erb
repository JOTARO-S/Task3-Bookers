<h1>User info</h1>

  <div class="container">
    <div class="row">
      <div class="xm-auto col-12 col-sm-12 col-md-10 col-lg-8">
        <%= form_with model: @user do |f| %>
        <div class="mt-3">
          <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
        </div>
        <div class=" mt-3">
          <label for="inputImage">Image</label><br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="mt-3">
          <label for="introduction" >Introduction</label><br>
          <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介" %>
        </div>
          <%= f.submit "Update User" , class:"btn btn-secondary mt-4" %>
      </div>
    </div>
  </div>
  
  
<% end %>

<html>
  <body>
    <main>
      
      <%= render 'books/error', book: @book %>
      
      <%= render 'books/info', {book: @book, user: @user} %>  
      
      <div class="col-md-8 offset-md-1">
        <h2>User</h2>
        <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
            
            <% @users.each do |user| %>
        <tbody>
            <tr>
             <td>
                <%= image_tag user.get_profile_image(100,100) %>
              </td>
              <td>
                  <%= user.name %>
              </td>
              <td><%= link_to user_path(user.id) do %>
                  Show
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        </table>
        </div>
      </div>
    </div>
    </main>
  </body>
</html>    
<html>
  <body>
    <main>
      
      <%= render 'books/info', {book: @book, user: @user} %>
      
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
            
            <% @books.each do |book| %>
        <tbody>
            <tr>
              <td><%= link_to user_path(@user.id) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %><br>
                  <% end %>
              </td>
              <td>
                  <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                  <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
        </table>
        </div>
      </div>
    </div>
    </main>
  </body>
</html> 